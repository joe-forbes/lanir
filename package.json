{
  "name": "lanir_node",
  "description": "A NodeJS / Express app that creates a JSON API for LIRC",
  "main": "server.js",
  "version": "0.1.3",
  "private": true,
  "dependencies": {
    "express": "3.0.6",
    "lirc_node": "*",
    "nconf": "^0.7.1",
    "winston": "^0.9.0"
  },
  "devDependencies": {
    "blanket": "^1.1.6",
    "mocha": "*",
    "proxyquire": "^1.3.1",
    "should": "^5.0.0",
    "supertest": "^0.15.0"
  },
  "scripts": {
    "test": "npm run test-all",
    "test-all": "mocha -R spec",
    "test-all-coverage": "mocha --require blanket -R html-cov --recursive > coverage.html"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/joe-forbes/lanir.git"
  },
  "author": "Joe Forbes (joe.forbes@gmail.com)",
  "config": {
    "blanket": {
      "pattern": "",
      "data-cover-never": [
        "node_modules",
        "test",
        "util"
      ]
    }
  }
}
